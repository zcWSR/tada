{
  "actions": {
    "deploy": {
      "script": "deploy.sh",
      "cwd": "/opt/app",
      "timeout": 300
    },
    "restart": {
      "command": ["systemctl", "restart", "myapp"],
      "cwd": "/opt/app",
      "timeout": 60
    },
    "build": {
      "command": "cd /opt/app && npm install && npm run build",
      "cwd": "/opt/app",
      "timeout": 300
    }
  }
}